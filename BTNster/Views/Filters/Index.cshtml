@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<BTNster.Web.Models.FiltersModel>
@{
    Layout = "Views/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
            <ul class="nav nav-sidebar">
                <li class="active"><a href="#">Broadcasthe.net <span class="sr-only">(current)</span></a></li>
                <li><a href="#">What.CD</a></li>
            </ul>
            <ul class="nav nav-sidebar">
                <li><a href="">Nav item</a></li>
                <li><a href="">Nav item again</a></li>
                <li><a href="">One more nav</a></li>
                <li><a href="">Another nav item</a></li>
                <li><a href="">More navigation</a></li>
            </ul>
            <ul class="nav nav-sidebar">
                <li><a href="">Nav item again</a></li>
                <li><a href="">One more nav</a></li>
                <li><a href="">Another nav item</a></li>
            </ul>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <h1 class="page-header">Filters</h1>
            <div class="row placeholders">
                <div class="col-xs-6 col-sm-3 placeholder">
                    <h1>@Model.TotalFilters</h1>
                    <h4>Total Filters</h4>
                    <span class="text-muted">filters currently present</span>
                </div>
                <div class="col-xs-6 col-sm-3 placeholder">
                    <h1>@Model.ActiveFilters</h1>
                    <h4>Active Filters</h4>
                    <span class="text-muted">filters currently enabled</span>
                </div>
                <div class="col-xs-6 col-sm-3 placeholder">
                    <h1>@Model.FilterMatchesHour</h1>
                    <h4>Matches last hour</h4>
                    <span class="text-muted">filter matches - hour</span>
                </div>
                <div class="col-xs-6 col-sm-3 placeholder">
                    <h1>@Model.FilterMatchesDay</h1>
                    <h4>Matches last 24 hours</h4>
                    <span class="text-muted">filter matches - day</span>
                </div>
            </div>
            <h2 class="sub-header">Current Filters</h2>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Filter #</th>
                            <th>Title</th>
                            <th>Matches</th>
                            <th>Downloads</th>
                            <th>Errors</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (BTNster.Web.Models.Filter filter in Model.Filters)
                        {
                            <tr>
                                <td>@filter.ID</td>
                                <td>@filter.Name</td>
                                <td>@filter.MatchesLastDay</td>
                                <td>@filter.Downloads</td>
                                <td>
                                    @filter.Errors
                                    @if (filter.Errors > 0)
                                    {
                                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-default editFilter" href="/Filters/Edit?FilterID=@filter.ID" role="button"><span class="glyphicon glyphicon-pencil"></span></a>
                                    <a class="btn btn-default btn-danger deleteFilter" href="/Filters/Delete?FilterID=@filter.ID" role="button"><span class="glyphicon glyphicon-trash"></span></a>
                                    <input class="toggleFilter" type="checkbox" checked data-toggle="toggle" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="~/scripts/Filters/filters.js"></script>